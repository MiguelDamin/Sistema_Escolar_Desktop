<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.CadastroPeriodoLetivoController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <VBox alignment="CENTER" spacing="30">
        <VBox styleClass="glass-card" spacing="25" maxWidth="500">
            
            <VBox spacing="8">
                <Label text="Cadastro de Período Letivo" styleClass="section-title"/>
            </VBox>
            
            <Separator styleClass="separator"/>
            
            <VBox spacing="20">
                <VBox spacing="8">
                    <Label text="Nome do Período (Ex: 1º Semestre 2025)"/>
                    <TextField fx:id="txtNomePeriodo" 
                              promptText="Digite o nome do período" 
                              prefHeight="50"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Data de Início"/>
                    <DatePicker fx:id="dtDataInicio" 
                               promptText="Selecione a data de início" 
                               prefHeight="50"
                               maxWidth="Infinity"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Data de Fim"/>
                    <DatePicker fx:id="dtDataFim" 
                               promptText="Selecione a data de fim" 
                               prefHeight="50"
                               maxWidth="Infinity"/>
                </VBox>
                
                <Label fx:id="lblMensagemErro" 
                      styleClass="error-label" 
                      visible="false"/>
                
                <Label fx:id="lblMensagemSucesso" 
                      styleClass="success-label" 
                      visible="false"/>
                
                <Button text="Salvar Período Letivo" 
                       onAction="#onSalvarPeriodoLetivo" 
                       styleClass="button-success" 
                       maxWidth="Infinity" 
                       prefHeight="55"/>
                
                <Button text="Limpar" 
                       onAction="#onLimpar" 
                       styleClass="button-secondary" 
                       maxWidth="Infinity" 
                       prefHeight="50"/>
                
                <Button text="Voltar" 
                       onAction="#onVoltar" 
                       styleClass="button-secondary" 
                       maxWidth="Infinity" 
                       prefHeight="50"/>
            </VBox>
        </VBox>
    </VBox>
</StackPane>