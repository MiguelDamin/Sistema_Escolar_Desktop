<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.PeriodoLetivo"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            
            <VBox styleClass="card" spacing="25" maxWidth="650">
                
                <VBox spacing="8">
                    <Label text="Cadastro Perído Letivo e Horário" styleClass="title"/>
                    <Label text="Preencha os dados abaixo" styleClass="subtitle"/>
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <VBox spacing="20">
                    <VBox spacing="8">
                        <Label text="Horário de inicio"/>
                        <TextField fx:id="txtHorarioInicio" promptText="HH:MM" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Horário de Fim"/>
                        <TextField fx:id="txtHorarioFim" promptText="HH:MM" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Data de Inicio: "/>
                        <DatePicker fx:id="DataInicio" promptText="DD/MM/AAAA" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Data de Fim"/>
                        <DatePicker fx:id="DataFim" promptText="DD/MM/AAAA" prefHeight="50"/>
                    </VBox>
                    
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <Label fx:id="LabelPeriodoLetivo" styleClass="success-label" visible="false" style="-fx-text-fill: #d4d4d8; -fx-font-size: 14px;"
                       wrapText="true"
                       alignment="CENTER"/>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Salvar" onAction="#onSalvarPeriodoLetivo" styleClass="button-success" prefWidth="180" prefHeight="50"/>
                    <Button text="Voltar" onAction="#onVoltar" styleClass="button-secondary" prefWidth="180" prefHeight="50"/>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>