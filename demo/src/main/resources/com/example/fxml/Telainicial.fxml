<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.TelaInicialController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <VBox alignment="CENTER" spacing="50">
        
        <!-- Cabeçalho -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="Sistema de Gestão Escolar" styleClass="welcome-title"/>
            <Label text="Escolha uma opção" styleClass="subtitle"/>
        </VBox>
        
        <!-- Grid de botões -->
        <VBox spacing="20" alignment="CENTER">
            
            <!-- Linha 1 -->
            <HBox spacing="20" alignment="CENTER">
                
                <!-- Professor -->
                <VBox onMouseClicked="#onCadastrarProfessor" 
                      styleClass="glass-card"
                      alignment="CENTER" 
                      spacing="15"
                      prefWidth="220" prefHeight="180"
                      style="-fx-cursor: hand;">
                    <StackPane>
                        <Circle radius="40" style="-fx-fill: #6366f1;"/>
                        <Label text="P" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </StackPane>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Professor" 
                               style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
                        <Label text="Gerenciar docentes" 
                               style="-fx-font-size: 12px; -fx-text-fill: #737373;"/>
                    </VBox>
                </VBox>
                
                <!-- Curso -->
                <VBox onMouseClicked="#onCadastrarCurso" 
                      styleClass="glass-card"
                      alignment="CENTER" 
                      spacing="15"
                      prefWidth="220" prefHeight="180"
                      style="-fx-cursor: hand;">
                    <StackPane>
                        <Rectangle width="80" height="80" arcWidth="15" arcHeight="15" style="-fx-fill: #8b5cf6;"/>
                        <Label text="C" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </StackPane>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Curso" 
                               style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
                        <Label text="Adicionar disciplinas" 
                               style="-fx-font-size: 12px; -fx-text-fill: #737373;"/>
                    </VBox>
                </VBox>
                
            </HBox>
            
            <!-- Linha 2 -->
            <HBox spacing="20" alignment="CENTER">
                
                <!-- Aluno -->
                <VBox onMouseClicked="#onCadastrarAluno" 
                      styleClass="glass-card"
                      alignment="CENTER" 
                      spacing="15"
                      prefWidth="220" prefHeight="180"
                      style="-fx-cursor: hand;">
                    <StackPane>
                        <Polygon points="0,-45, 45,30, -45,30" style="-fx-fill: #ec4899;"/>
                        <Label text="A" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </StackPane>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Aluno" 
                               style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
                        <Label text="Gerenciar estudantes" 
                               style="-fx-font-size: 12px; -fx-text-fill: #737373;"/>
                    </VBox>
                </VBox>
                
                <!-- Período Letivo -->
                <VBox onMouseClicked="#onPeriodoLetivo" 
                      styleClass="glass-card"
                      alignment="CENTER" 
                      spacing="15"
                      prefWidth="220" prefHeight="180"
                      style="-fx-cursor: hand;">
                    <StackPane>
                        <Rectangle width="70" height="70" arcWidth="10" arcHeight="10" 
                                  style="-fx-fill: transparent; -fx-stroke: #10b981; -fx-stroke-width: 6;"/>
                        <Label text="L" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                    </StackPane>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Período Letivo" 
                               style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
                        <Label text="Definir calendário" 
                               style="-fx-font-size: 12px; -fx-text-fill: #737373;"/>
                    </VBox>
                </VBox>
                
            </HBox>
            
        </VBox>
        
        <!-- Botão Voltar -->
        <Button text="Voltar" 
               onAction="#onVoltar"
               styleClass="button-secondary"
               prefWidth="200"
               prefHeight="50"/>
    </VBox>
</StackPane>