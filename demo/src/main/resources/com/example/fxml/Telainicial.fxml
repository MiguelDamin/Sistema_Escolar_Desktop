<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.TelaInicialController"
            stylesheets="@../css/styles.css"
            styleClass="root"
            prefWidth="1400"
            prefHeight="900">
    
    <left>
        <VBox styleClass="sidebar" spacing="0">
            
            <!-- Header com Logo -->
            <VBox styleClass="sidebar-header" alignment="CENTER">
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="GRADUATION_CAP" size="32" fill="white"/>
                    <VBox>
                        <Label text="Gestão Escolar" styleClass="sidebar-title"/>
                        <Label text="Sistema Administrativo" styleClass="sidebar-subtitle"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox spacing="0" VBox.vgrow="ALWAYS">
                    
                    <Label text="PRINCIPAL" styleClass="menu-section-title"/>
                    
                    <!-- Dashboard -->
                    <HBox styleClass="menu-item,menu-item-active" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onDashboard" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="DASHBOARD" size="20" styleClass="menu-icon"/>
                        <Label text="Dashboard"/>
                    </HBox>
                    
                    <Label text="CADASTROS" styleClass="menu-section-title"/>
                    
                    <!-- Professores -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastrarProfessor" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="USER" size="20" styleClass="menu-icon"/>
                        <Label text="Professores"/>
                    </HBox>
                    
                    <!-- Alunos -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastrarAluno" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="USERS" size="20" styleClass="menu-icon"/>
                        <Label text="Alunos"/>
                    </HBox>
                    
                    <!-- Turmas -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastrarTurma" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="BUILDING" size="20" styleClass="menu-icon"/>
                        <Label text="Turmas"/>
                    </HBox>
                    
                    <!-- Cursos -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastrarCurso" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="BOOK" size="20" styleClass="menu-icon"/>
                        <Label text="Cursos"/>
                    </HBox>
                    
                    <!-- Disciplinas -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastrarDisciplina" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="BOOKMARK" size="20" styleClass="menu-icon"/>
                        <Label text="Disciplinas"/>
                    </HBox>
                    
                    <Label text="GESTÃO ACADÊMICA" styleClass="menu-section-title"/>
                    
                    <!-- Período Letivo -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onPeriodoLetivo" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="CALENDAR" size="20" styleClass="menu-icon"/>
                        <Label text="Período Letivo"/>
                    </HBox>
                    
                    <!-- Horários -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCadastroHorario" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="CLOCK_ALT" size="20" styleClass="menu-icon"/>
                        <Label text="Horários"/>
                    </HBox>
                    
                    <Label text="DOCUMENTOS" styleClass="menu-section-title"/>
                    
                    <!-- Certificados -->
                    <HBox styleClass="menu-item" spacing="12" alignment="CENTER_LEFT" 
                          onMouseClicked="#onCertificados" style="-fx-cursor: hand;">
                        <FontAwesomeIconView glyphName="TROPHY" size="20" styleClass="menu-icon"/>
                        <Label text="Certificados"/>
                    </HBox>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <!-- Footer com informações do usuário -->
                    <VBox styleClass="user-info" spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <FontAwesomeIconView glyphName="USER_CIRCLE" size="32" fill="#ffffff"/>
                            <VBox>
                                <Label text="Administrador" styleClass="user-name"/>
                                <Label text="admin@escola.com" styleClass="user-role"/>
                            </VBox>
                        </HBox>
                        <Button text="Sair" 
                               onAction="#onVoltar"
                               styleClass="button-secondary"
                               maxWidth="Infinity"
                               prefHeight="40">
                            <graphic>
                                <FontAwesomeIconView glyphName="SIGN_OUT" size="16"/>
                            </graphic>
                        </Button>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>
    
    <center>
        <VBox styleClass="main-content">
            
            <HBox styleClass="content-header" alignment="CENTER_LEFT" spacing="10">
                <FontAwesomeIconView glyphName="DASHBOARD" size="24" fill="#ffffff"/>
                <VBox>
                    <Label text="Dashboard" styleClass="page-title"/>
                    <Label text="Visão geral do sistema" styleClass="page-subtitle"/>
                </VBox>
            </HBox>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" 
                       style="-fx-background-color: transparent;">
                <VBox styleClass="content-body" spacing="30">
                    
                    <!-- Cards de Estatísticas com Ícones -->
                    <GridPane styleClass="grid-cards" 
                             hgap="20" vgap="20">
                        
                        <!-- Card Alunos -->
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="0"
                             GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <FontAwesomeIconView glyphName="USERS" size="36" fill="#ffffff"/>
                                <VBox>
                                    <Label text="Total de Alunos" styleClass="card-title"/>
                                    <Label text="1,234" styleClass="card-value"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <FontAwesomeIconView glyphName="ARROW_UP" size="12" fill="#4ade80"/>
                                <Label text="+12% este mês" styleClass="card-description"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Card Professores -->
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="1"
                             GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <FontAwesomeIconView glyphName="USER" size="36" fill="#ffffff"/>
                                <VBox>
                                    <Label text="Professores" styleClass="card-title"/>
                                    <Label text="87" styleClass="card-value"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="12" fill="#4ade80"/>
                                <Label text="+3 novos" styleClass="card-description"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Card Cursos -->
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="2"
                             GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <FontAwesomeIconView glyphName="BOOK" size="36" fill="#ffffff"/>
                                <VBox>
                                    <Label text="Cursos Ativos" styleClass="card-title"/>
                                    <Label text="24" styleClass="card-value"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <FontAwesomeIconView glyphName="REFRESH" size="12" fill="#737373"/>
                                <Label text="Em andamento" styleClass="card-description"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Card Turmas -->
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="3"
                             GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <FontAwesomeIconView glyphName="BUILDING" size="36" fill="#ffffff"/>
                                <VBox>
                                    <Label text="Turmas" styleClass="card-title"/>
                                    <Label text="45" styleClass="card-value"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="12" fill="#4ade80"/>
                                <Label text="Ativas no período" styleClass="card-description"/>
                            </HBox>
                        </VBox>
                    </GridPane>
                    
                    <!-- Ações Rápidas -->
                    <VBox styleClass="form-card" spacing="20">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <FontAwesomeIconView glyphName="BOLT" size="24" fill="#ffffff"/>
                            <Label text="Ações Rápidas" styleClass="page-title" 
                                  style="-fx-font-size: 22px;"/>
                        </HBox>
                        
                        <Separator styleClass="separator"/>
                        
                        <GridPane hgap="15" vgap="15">
                            <Button text="Novo Aluno" 
                                   onAction="#onCadastrarAluno"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="0"
                                   GridPane.rowIndex="0">
                                <graphic>
                                    <FontAwesomeIconView glyphName="USER_PLUS" size="16"/>
                                </graphic>
                            </Button>
                            
                            <Button text="Novo Professor" 
                                   onAction="#onCadastrarProfessor"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="0">
                                <graphic>
                                    <FontAwesomeIconView glyphName="USER_PLUS" size="16"/>
                                </graphic>
                            </Button>
                            
                            <Button text="Novo Curso" 
                                   onAction="#onCadastrarCurso"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="2"
                                   GridPane.rowIndex="0">
                                <graphic>
                                    <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="16"/>
                                </graphic>
                            </Button>
                            
                            <Button text="Nova Turma" 
                                   onAction="#onCadastrarTurma"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="3"
                                   GridPane.rowIndex="0">
                                <graphic>
                                    <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="16"/>
                                </graphic>
                            </Button>
                        </GridPane>
                    </VBox>
                    
                    <!-- Atividades Recentes -->
                    <VBox styleClass="form-card" spacing="20">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <FontAwesomeIconView glyphName="HISTORY" size="24" fill="#ffffff"/>
                            <Label text="Atividades Recentes" styleClass="page-title" 
                                  style="-fx-font-size: 22px;"/>
                        </HBox>
                        
                        <Separator styleClass="separator"/>
                        
                        <VBox spacing="15">
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="24" fill="#4ade80"/>
                                <VBox>
                                    <Label text="Novo aluno matriculado" style="-fx-font-weight: 600;"/>
                                    <Label text="João Silva - Turma A" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="2 horas atrás" styleClass="label-secondary"/>
                            </HBox>
                            
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <FontAwesomeIconView glyphName="USER_PLUS" size="24" fill="#60a5fa"/>
                                <VBox>
                                    <Label text="Professor cadastrado" style="-fx-font-weight: 600;"/>
                                    <Label text="Maria Santos - Matemática" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="5 horas atrás" styleClass="label-secondary"/>
                            </HBox>
                            
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <FontAwesomeIconView glyphName="STAR" size="24" fill="#fbbf24"/>
                                <VBox>
                                    <Label text="Novo curso criado" style="-fx-font-weight: 600;"/>
                                    <Label text="Engenharia de Software" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="1 dia atrás" styleClass="label-secondary"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>