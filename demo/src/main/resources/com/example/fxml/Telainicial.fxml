<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.TelaInicialController"
            stylesheets="@../css/styles.css"
            styleClass="root"
            prefWidth="1400"
            prefHeight="900">
    
    <left>
        <VBox styleClass="sidebar" spacing="0">
            
            <VBox styleClass="sidebar-header">
                <Label text="Gestao Escolar" styleClass="sidebar-title"/>
                <Label text="Sistema Administrativo" styleClass="sidebar-subtitle"/>
            </VBox>
            
            <VBox spacing="0" VBox.vgrow="ALWAYS">
                
                <Label text="PRINCIPAL" styleClass="menu-section-title"/>
                
                <Button text="Dashboard" 
                       onAction="#onDashboard"
                       styleClass="menu-item,menu-item-active"
                       maxWidth="Infinity"/>
                
                <Label text="CADASTROS" styleClass="menu-section-title"/>
                
                <Button text="Professores" 
                       onAction="#onCadastrarProfessor"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                
                <Button text="Alunos" 
                       onAction="#onCadastrarAluno"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>

                <Button text="Turmas" 
                       onAction="#onCadastrarTurma"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>

                <Button text="Cursos" 
                       onAction="#onCadastrarCurso"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                
                <Button text="Periodo Letivo" 
                       onAction="#onPeriodoLetivo"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                       
                <Button text="HorÃ¡rios" 
                       onAction="#onCadastroHorario"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                       
                <Button text="Disciplinas" 
                       onAction="#onCadastrarDisciplina"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                
                <Label text="RELATORIOS" styleClass="menu-section-title"/>
                
                <Button text="Estatisticas" 
                       onAction="#onEstatisticas"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                
                <Button text="Relatorios" 
                       onAction="#onRelatorios"
                       styleClass="menu-item"
                       maxWidth="Infinity"/>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <VBox styleClass="user-info" spacing="8">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label text="USER" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <VBox>
                            <Label text="Administrador" styleClass="user-name"/>
                            <Label text="admin@escola.com" styleClass="user-role"/>
                        </VBox>
                    </HBox>
                    <Button text="Sair" 
                           onAction="#onVoltar"
                           styleClass="button-secondary"
                           maxWidth="Infinity"
                           prefHeight="40"/>
                </VBox>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <VBox styleClass="main-content">
            
            <HBox styleClass="content-header" alignment="CENTER_LEFT">
                <VBox>
                    <Label text="Dashboard" styleClass="page-title"/>
                    <Label text="Visao geral do sistema" styleClass="page-subtitle"/>
                </VBox>
            </HBox>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" 
                       style="-fx-background-color: transparent;">
                <VBox styleClass="content-body" spacing="30">
                    
                    <GridPane styleClass="grid-cards" 
                             hgap="20" vgap="20">
                        
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="0"
                             GridPane.rowIndex="0">
                            <Label text="ALUNOS" styleClass="card-icon"/>
                            <Label text="Total de Alunos" styleClass="card-title"/>
                            <Label text="1,234" styleClass="card-value"/>
                            <Label text="+12% este mes" styleClass="card-description"/>
                        </VBox>
                        
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="1"
                             GridPane.rowIndex="0">
                            <Label text="PROF" styleClass="card-icon"/>
                            <Label text="Professores" styleClass="card-title"/>
                            <Label text="87" styleClass="card-value"/>
                            <Label text="+3 novos" styleClass="card-description"/>
                        </VBox>
                        
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="2"
                             GridPane.rowIndex="0">
                            <Label text="CURSOS" styleClass="card-icon"/>
                            <Label text="Cursos Ativos" styleClass="card-title"/>
                            <Label text="24" styleClass="card-value"/>
                            <Label text="Em andamento" styleClass="card-description"/>
                        </VBox>
                        
                        <VBox styleClass="dashboard-card" 
                             spacing="15"
                             prefWidth="280"
                             prefHeight="150"
                             GridPane.columnIndex="3"
                             GridPane.rowIndex="0">
                            <Label text="TURMAS" styleClass="card-icon"/>
                            <Label text="Turmas" styleClass="card-title"/>
                            <Label text="45" styleClass="card-value"/>
                            <Label text="Ativas no periodo" styleClass="card-description"/>
                        </VBox>
                    </GridPane>
                    
                    <VBox styleClass="form-card" spacing="20">
                        <Label text="Acoes Rapidas" styleClass="page-title" 
                              style="-fx-font-size: 22px;"/>
                        
                        <Separator styleClass="separator"/>
                        
                        <GridPane hgap="15" vgap="15">
                            <Button text="Novo Aluno" 
                                   onAction="#onCadastrarAluno"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="0"
                                   GridPane.rowIndex="0"/>
                            
                            <Button text="Novo Professor" 
                                   onAction="#onCadastrarProfessor"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="0"/>
                            
                            <Button text="Novo Curso" 
                                   onAction="#onCadastrarCurso"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="2"
                                   GridPane.rowIndex="0"/>
                            
                            <Button text="Nova Turma" 
                                   onAction="#onCadastrarTurma"
                                   styleClass="button-primary"
                                   prefWidth="200"
                                   prefHeight="50"
                                   GridPane.columnIndex="3"
                                   GridPane.rowIndex="0"/>
                        </GridPane>
                    </VBox>
                    
                    <VBox styleClass="form-card" spacing="20">
                        <Label text="Atividades Recentes" styleClass="page-title" 
                              style="-fx-font-size: 22px;"/>
                        
                        <Separator styleClass="separator"/>
                        
                        <VBox spacing="15">
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <Label text="[!]" style="-fx-font-size: 20px;"/>
                                <VBox>
                                    <Label text="Novo aluno matriculado" style="-fx-font-weight: 600;"/>
                                    <Label text="Joao Silva - Turma A" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="2 horas atras" styleClass="label-secondary"/>
                            </HBox>
                            
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <Label text="[+]" style="-fx-font-size: 20px;"/>
                                <VBox>
                                    <Label text="Professor cadastrado" style="-fx-font-weight: 600;"/>
                                    <Label text="Maria Santos - Matematica" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="5 horas atras" styleClass="label-secondary"/>
                            </HBox>
                            
                            <HBox spacing="15" alignment="CENTER_LEFT" 
                                 style="-fx-padding: 12; -fx-background-color: #0a0a0a; -fx-background-radius: 8;">
                                <Label text="[*]" style="-fx-font-size: 20px;"/>
                                <VBox>
                                    <Label text="Novo curso criado" style="-fx-font-weight: 600;"/>
                                    <Label text="Engenharia de Software" styleClass="label-secondary"/>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="1 dia atras" styleClass="label-secondary"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>