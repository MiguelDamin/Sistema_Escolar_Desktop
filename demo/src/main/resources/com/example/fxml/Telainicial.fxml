<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.TelaInicialController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <VBox alignment="CENTER" spacing="40">
        
        <VBox alignment="CENTER" spacing="12">
            <Label text="Bem-vindo ao Sistema de Gestão Escolar!!" styleClass="welcome-title"/>
            <Label text="Escolha uma opção abaixo" styleClass="subtitle"/>
        </VBox>
        
        <VBox styleClass="glass-card" spacing="20" maxWidth="500">
            
            <Button text="Cadastrar Professor" 
                   onAction="#onCadastrarProfessor"
                   styleClass="button"
                   maxWidth="Infinity"
                   prefHeight="60"/>
            
            <Button text="Cadastrar Curso" 
                   onAction="#onCadastrarCurso"
                   styleClass="button"
                   maxWidth="Infinity"
                   prefHeight="60"/>
            
            <Button text="Cadastrar Aluno" 
                   onAction="#onCadastrarAluno"
                   styleClass="button"
                   maxWidth="Infinity"
                   prefHeight="60"/>

           <Button text="Cadastrar Periodo Letivo" 
                   onAction="#onPeriodoLetivo"
                   styleClass="button"
                   maxWidth="Infinity"
                   prefHeight="60"/>

            <Button text="Voltar" 
                   onAction="#onVoltar"
                   styleClass="button"
                   maxWidth="Infinity"
                   prefHeight="60"/>
        </VBox>
    </VBox>
</StackPane>