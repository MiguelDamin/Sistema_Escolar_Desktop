<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.CadastroProfessorController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            
            <VBox styleClass="card" spacing="25" maxWidth="650">
                
                <VBox spacing="8">
                    <Label text="Cadastro de Professor" styleClass="title"/>
                    <Label text="Preencha os dados abaixo" styleClass="subtitle"/>
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <VBox spacing="20">
                    <VBox spacing="8">
                        <Label text="Nome do Professor"/>
                        <TextField fx:id="txtNomeProfessor" promptText="Digite o nome completo" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Idade"/>
                        <TextField fx:id="txtIdadeProfessor" promptText="Digite a idade" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="CPF"/>
                        <TextField fx:id="txtCpfProfessor" promptText="Digite o CPF" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Email"/>
                        <TextField fx:id="txtEmailProfessor" promptText="email@exemplo.com" prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Telefone"/>
                        <TextField fx:id="txtTelefoneProfessor" promptText="(00) 00000-0000" prefHeight="50"/>
                    </VBox>
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <Label fx:id="LabelProfessor" styleClass="success-label" visible="false" style="-fx-text-fill: #d4d4d8; -fx-font-size: 14px;"
                       wrapText="true"
                       alignment="CENTER"/>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Limpar" onAction="#onLimpar" styleClass="button-secondary" prefWidth="180" prefHeight="50"/>
                    <Button text="Salvar" onAction="#onSalvarProfessor" styleClass="button-success" prefWidth="180" prefHeight="50"/>
                    <Button text="Voltar" onAction="#onVoltar" styleClass="button-secondary" prefWidth="180" prefHeight="50"/>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>