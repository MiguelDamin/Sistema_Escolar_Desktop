                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total de Professores" style="-fx-text-fill: #737373; -fx-font-size: 12px;"/>
                    <Label text="0" style="-fx-text-fill: #4ade80; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <Separator orientation="VERTICAL" prefHeight="40"/>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Status do Sistema" style="-fx-text-fill: #737373; -fx-font-size: 12px;"/>
                    <Label text="âœ… Operacional" style="-fx-text-fill: #4ade80; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</ScrollPane>