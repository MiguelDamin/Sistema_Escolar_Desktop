<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.CadastroProfessorController"
            fitToWidth="true"
            fitToHeight="true"
            style="-fx-background-color: transparent;"
            stylesheets="@../css/styles.css">
    
    <VBox spacing="30" style="-fx-padding: 30; -fx-background-color: transparent;">
        
        <!-- ==================== FORMULÃRIO DE CADASTRO ==================== -->
        <HBox alignment="TOP_CENTER" prefWidth="1000" spacing="0">
            <VBox styleClass="form-card" prefWidth="1000" maxWidth="1000">
                
