                       styleClass="subtitle"/>
            </VBox>
            
            <Separator styleClass="separator"/>
            
            <TableView fx:id="tblProfessores" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60" resizable="false" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
                    <TableColumn fx:id="colCpf" text="CPF" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
                    <TableColumn fx:id="colAcoes" text="AÃ§Ãµes" prefWidth="180" resizable="false" style="-fx-alignment: CENTER;"/>
                </columns>
                
                <placeholder>
                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                        <Label text="ðŸ“­" style="-fx-font-size: 48px;"/>
                        <Label text="Nenhum professor cadastrado" 
