                    <VBox spacing="8">
                        <Label text="Cadastro de Professor" styleClass="title"/>
                        <Label text="Preencha os dados abaixo ou edite um professor existente" styleClass="subtitle"/>
                    </VBox>
                    
                    <Separator styleClass="separator"/>
                    
                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                        
                        <!-- Nome Completo -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                            <Label text="Nome Completo" style="-fx-text-fill: white;"/>
                            <TextField fx:id="txtNomeProfessor" 
                                      promptText="Digite o nome completo do professor" 
                                      prefHeight="50"/>
                        </VBox>
                        
                        <!-- Idade -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Idade" style="-fx-text-fill: white;"/>
                            <TextField fx:id="txtIdadeProfessor" 
                                      promptText="Digite a idade" 
                                      prefHeight="50"/>
                        </VBox>
                        
                        <!-- CPF -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="CPF (somente nÃºmeros)" style="-fx-text-fill: white;"/>
                            <TextField fx:id="txtCpfProfessor" 
                                      promptText="Digite o CPF (11 dÃ­gitos)" 
                                      prefHeight="50"/>
                        </VBox>
                        
                        <!-- Email -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Email" style="-fx-text-fill: white;"/>
                            <TextField fx:id="txtEmailProfessor" 
                                      promptText="email@exemplo.com" 
                                      prefHeight="50"/>
                        </VBox>
                        
                        <!-- Telefone -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="Telefone (somente nÃºmeros)" style="-fx-text-fill: white;"/>
                            <TextField fx:id="txtTelefoneProfessor" 
                                      promptText="Digite o telefone" 
                                      prefHeight="50"/>
                        </VBox>
                    </GridPane>
                    
                    <Separator styleClass="separator"/>
                    
                    <!-- Mensagem de Feedback -->
                    <Label fx:id="LabelProfessor" 
                           styleClass="success-label" 
                           visible="false" 
                           wrapText="true"
                           alignment="CENTER"
                           style="-fx-font-size: 14px;"/>
                    
                    <!-- BotÃµes de AÃ§Ã£o -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Limpar" 
                               onAction="#onLimpar" 
                               styleClass="button-secondary" 
                               prefWidth="180" 
                               prefHeight="50"/>
                        
                        <Button text="Salvar" 
                               onAction="#onSalvarProfessor" 
                               styleClass="button-success" 
                               prefWidth="180" 
                               prefHeight="50"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
        
        <!-- ==================== TABELA DE PROFESSORES ==================== -->
        <VBox styleClass="card" spacing="20">
            
            <VBox spacing="8">
                <Label text="ðŸ“‹ Professores Cadastrados" 
