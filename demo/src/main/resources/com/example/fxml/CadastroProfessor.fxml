            </TableView>
            
            <!-- Dica Visual -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Label text="ðŸ’¡ Dica:" 
                       style="-fx-text-fill: #64b5f6; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label text="Use o botÃ£o 'Editar' para carregar os dados no formulÃ¡rio acima e modificÃ¡-los" 
                       style="-fx-text-fill: #d4d4d8; -fx-font-size: 12px;"/>
