<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


 <VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.CadastroProfessorController"
      spacing="15" 
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">
    
    <!-- Título -->
    <Label text="Cadastro de Professor" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Separator/>
    
    <!-- Nome do Aluno -->
    <Label text="Nome do Aluno:"/>
    <TextField fx:id="txtNomeProfessor" promptText="Digite o nome completo"/>
    
    <!-- Idade -->
    <Label text="Idade:"/>
    <TextField fx:id="txtIdadeProfessor" promptText="Digite a idade"/>

    <Label text="CPF:"/>
    <TextField fx:id="txtCpfProfessor" promptText="Digite o CPF"/>
    
    
    <!-- Email -->
    <Label text="Email:"/>
    <TextField fx:id="txtEmailProfessor" promptText="email@exemplo.com"/>
    
    <!-- Telefone -->
    <Label text="Telefone:"/>
    <TextField fx:id="txtTelefoneProfessor" promptText="(00) 00000-0000"/>
    
    
    <!-- Botões -->
    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
    
        <Button text="Salvar" onAction="#onSalvarProfessor" prefWidth="100"/>
        <Label fx:id="LabelProfessor" layoutX="123" layoutY="456" text="" />
        <Button text="Limpar" onAction="#onLimpar" prefWidth="100"/>
        <Button text="Voltar" onAction="#onVoltar" prefWidth="100"/>

    </HBox>
    
    <!-- Mensagem -->
   
    
</VBox>