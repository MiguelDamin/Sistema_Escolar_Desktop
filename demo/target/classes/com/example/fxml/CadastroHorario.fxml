<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.CadastroHorarioController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            
            <VBox styleClass="card" spacing="25" maxWidth="600">
                
                <VBox spacing="8">
                    <Label text="Cadastro de Horário" styleClass="title"/>
                    <Label text="Configure os horários das aulas" styleClass="subtitle"/>
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <VBox spacing="20">
                    
                    <VBox spacing="8">
                        <Label text="Turma"/>
                        <ComboBox fx:id="cbTurma" 
                                 promptText="Selecione a turma" 
                                 maxWidth="Infinity" 
                                 prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Professor"/>
                        <ComboBox fx:id="cbProfessor" 
                                 promptText="Selecione o professor" 
                                 maxWidth="Infinity" 
                                 prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Período Letivo"/>
                        <ComboBox fx:id="cbPeriodoLetivo" 
                                 promptText="Selecione o período letivo" 
                                 maxWidth="Infinity" 
                                 prefHeight="50"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Dia da Semana"/>
                        <ComboBox fx:id="cbDiaSemana" 
                                 promptText="Selecione o dia" 
                                 maxWidth="Infinity" 
                                 prefHeight="50"/>
                    </VBox>
                    
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Horário de Início (Ex: 08:00)"/>
                            <TextField fx:id="txtHorarioInicio" 
                                      promptText="HH:MM" 
                                      prefHeight="50"/>
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Horário de Fim (Ex: 10:00)"/>
                            <TextField fx:id="txtHorarioFim" 
                                      promptText="HH:MM" 
                                      prefHeight="50"/>
                        </VBox>
                    </HBox>
                    
                </VBox>
                
                <Separator styleClass="separator"/>
                
                <Label fx:id="lblMensagemErro" 
                      styleClass="error-label" 
                      visible="false"
                      wrapText="true"/>
                
                <Label fx:id="lblMensagemSucesso" 
                      styleClass="success-label" 
                      visible="false"
                      wrapText="true"/>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Limpar" 
                           onAction="#onLimpar" 
                           styleClass="button-secondary" 
                           prefWidth="180" 
                           prefHeight="50"/>
                    
                    <Button text="Salvar" 
                           onAction="#onSalvarHorario" 
                           styleClass="button-success" 
                           prefWidth="180" 
                           prefHeight="50"/>
                    
                    <Button text="Voltar" 
                           onAction="#onVoltar" 
                           styleClass="button-secondary" 
                           prefWidth="180" 
                           prefHeight="50"/>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>