<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


 <VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.RegisterController"
      spacing="15" 
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">
    
    <!-- Título -->
    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Separator/>
    
    <!-- Nome do Aluno -->
    <Label text="Nome do Aluno:"/>
    <TextField fx:id="txtUsuario" promptText="Digite seu usuário"/>
    
    <!-- Idade -->
    <Label text="Senha"/>
    <PasswordField fx:id="txtSenha" promptText="Digite sua senha"/>
    <Button text="Entrar" onAction="#onEntrar" prefWidth="100"/>
  
   
</VBox>