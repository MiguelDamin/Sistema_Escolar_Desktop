<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.CadastroAlunoController"
            stylesheets="@../css/styles.css">

    <!-- Formulário à esquerda -->
    <left>
        <VBox spacing="12" alignment="TOP_LEFT" style="-fx-padding:18;" prefWidth="520">
            <Label text="Cadastro de Aluno" styleClass="h1"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Idade:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtIdade" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="CPF:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCpf" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Telefone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Data Nasc.:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dtDataNascimento" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Turma:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbTurma" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <Separator/>

            <Label text="Responsável" styleClass="h2"/>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNomeResponsavel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCpfResponsavel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Telefone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefoneResponsavel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmailResponsavel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Endereço:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEnderecoResponsavel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Parentesco:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbParentesco" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Limpar" onAction="#onLimpar"/>
                <Button text="Salvar" onAction="#onSalvar"/>
            </HBox>
        </VBox>
    </left>

    <!-- Lista de alunos (TableView) à direita -->
    <center>
        <VBox spacing="8" style="-fx-padding:18;">
            <Label text="Alunos Cadastrados" styleClass="h1"/>
            <TableView fx:id="tblEstudantes" prefHeight="600" columnResizePolicy="CONSTRAINED_RESIZE_POLICY">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="220"/>
                    <TableColumn fx:id="colTurma" text="Turma" prefWidth="140"/>
                    <TableColumn fx:id="colEditar" text="Editar" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>