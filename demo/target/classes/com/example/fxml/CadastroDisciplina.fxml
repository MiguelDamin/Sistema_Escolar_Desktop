<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.CadastroDisciplinaController"
           stylesheets="@../css/styles.css"
           styleClass="main-container">
    
    <VBox alignment="CENTER" spacing="30">
        <VBox styleClass="glass-card" spacing="25" maxWidth="550">
            
            <VBox spacing="8">
                <Label text="Cadastro de Disciplina" styleClass="section-title"/>
                <Label text="Cadastre as matérias do curso" styleClass="subtitle"/>
            </VBox>
            
            <Separator styleClass="separator"/>
            
            <VBox spacing="20">
                
                <VBox spacing="8">
                    <Label text="Nome da Disciplina (Ex: Matemática)"/>
                    <TextField fx:id="txtNomeDisciplina" 
                              promptText="Digite o nome da disciplina" 
                              prefHeight="50"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Carga Horária (em horas)"/>
                    <TextField fx:id="txtCargaHoraria" 
                              promptText="Ex: 80" 
                              prefHeight="50"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Descrição (Opcional)"/>
                    <TextArea fx:id="txtDescricao" 
                             promptText="Digite uma breve descrição da disciplina" 
                             prefHeight="100"
                             wrapText="true"/>
                </VBox>
                
            </VBox>
            
            <Separator styleClass="separator"/>
            
            <Label fx:id="lblMensagemErro" 
                  styleClass="error-label" 
                  visible="false"
                  wrapText="true"/>
            
            <Label fx:id="lblMensagemSucesso" 
                  styleClass="success-label" 
                  visible="false"
                  wrapText="true"/>
            
            <HBox spacing="15" alignment="CENTER">
                <Button text="Limpar" 
                       onAction="#onLimpar" 
                       styleClass="button-secondary" 
                       prefWidth="160" 
                       prefHeight="50"/>
                
                <Button text="Salvar" 
                       onAction="#onSalvarDisciplina" 
                       styleClass="button-success" 
                       prefWidth="160" 
                       prefHeight="50"/>
                
                <Button text="Voltar" 
                       onAction="#onVoltar" 
                       styleClass="button-secondary" 
                       prefWidth="160" 
                       prefHeight="50"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>