<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.TelaInicialController"
            stylesheets="@../css/styles.css"
            styleClass="root">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true" style="-fx-background-color: transparent;">
            <content>
                <!-- StackPane centraliza o container; o VBox interno tem largura máxima fixa -->
                <StackPane>
                    <VBox fx:id="centerContainer" spacing="20" style="-fx-padding:20;" maxWidth="1100" prefWidth="1100">
                        <!-- Cards de Estatísticas com fx:id -->
                        <GridPane styleClass="grid-cards" 
                                 hgap="20" vgap="20" alignment="CENTER">
                            <!-- Card Alunos -->
                            <VBox styleClass="dashboard-card" spacing="15"
                                  prefWidth="250" prefHeight="150"
                                  GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <FontAwesomeIconView glyphName="USERS" size="36" fill="#ffffff"/>
                                    <VBox>
                                        <Label text="Total de Alunos" styleClass="card-title"/>
                                        <Label fx:id="lblTotalAlunos" text="0" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <FontAwesomeIconView glyphName="ARROW_UP" size="12" fill="#4ade80"/>
                                    <Label fx:id="lblPercentualAlunos" text="Carregando..." styleClass="card-description"/>
                                </HBox>
                            </VBox>

                            <!-- Card Professores -->
                            <VBox styleClass="dashboard-card" spacing="15"
                                  prefWidth="250" prefHeight="150"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <FontAwesomeIconView glyphName="USER" size="36" fill="#ffffff"/>
                                    <VBox>
                                        <Label text="Professores" styleClass="card-title"/>
                                        <Label fx:id="lblTotalProfessores" text="0" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="12" fill="#4ade80"/>
                                    <Label fx:id="lblNovosProfessores" text="Carregando..." styleClass="card-description"/>
                                </HBox>
                            </VBox>

                            <!-- Card Cursos -->
                            <VBox styleClass="dashboard-card" spacing="15"
                                  prefWidth="250" prefHeight="150"
                                  GridPane.columnIndex="2" GridPane.rowIndex="0">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <FontAwesomeIconView glyphName="BOOK" size="36" fill="#ffffff"/>
                                    <VBox>
                                        <Label text="Cursos Ativos" styleClass="card-title"/>
                                        <Label fx:id="lblTotalCursos" text="0" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <FontAwesomeIconView glyphName="REFRESH" size="12" fill="#737373"/>
                                    <Label fx:id="lblStatusCursos" text="Carregando..." styleClass="card-description"/>
                                </HBox>
                            </VBox>

                            <!-- Card Turmas -->
                            <VBox styleClass="dashboard-card" spacing="15"
                                  prefWidth="250" prefHeight="150"
                                  GridPane.columnIndex="3" GridPane.rowIndex="0">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <FontAwesomeIconView glyphName="BUILDING" size="36" fill="#ffffff"/>
                                    <VBox>
                                        <Label text="Turmas" styleClass="card-title"/>
                                        <Label fx:id="lblTotalTurmas" text="0" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="12" fill="#4ade80"/>
                                    <Label fx:id="lblStatusTurmas" text="Carregando..." styleClass="card-description"/>
                                </HBox>
                            </VBox>
                        </GridPane>

                        <!-- Ações Rápidas -->
                        <VBox styleClass="form-card" spacing="20" alignment="CENTER">
                            <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="Infinity">
                                <FontAwesomeIconView glyphName="BOLT" size="24" fill="#ffffff"/>
                                <Label text="Ações Rápidas" styleClass="page-title" style="-fx-font-size: 22px;"/>
                            </HBox>

                            <Separator styleClass="separator" maxWidth="Infinity"/>

                            <GridPane hgap="15" vgap="15" alignment="CENTER">
                                <Button text="Novo Aluno" 
                                        onMouseClicked="#onCadastrarAluno2"
                                        styleClass="button-primary"
                                        prefWidth="200" prefHeight="50"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="USER_PLUS" size="16"/>
                                    </graphic>
                                </Button>

                                <Button text="Novo Professor" 
                                        onMouseClicked="#onCadastrarProfessor2"
                                        styleClass="button-primary"
                                        prefWidth="200" prefHeight="50"
                                        GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="USER_PLUS" size="16"/>
                                    </graphic>
                                </Button>

                                <Button text="Novo Curso" 
                                        onMouseClicked="#onCadastrarCurso2"
                                        styleClass="button-primary"
                                        prefWidth="200" prefHeight="50"
                                        GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="16"/>
                                    </graphic>
                                </Button>

                                <Button text="Nova Turma" 
                                        onMouseClicked="#onCadastrarTurma2"
                                        styleClass="button-primary"
                                        prefWidth="200" prefHeight="50"
                                        GridPane.columnIndex="3" GridPane.rowIndex="0">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="16"/>
                                    </graphic>
                                </Button>
                            </GridPane>
                        </VBox>

                        <!-- Notas -->
                        <VBox styleClass="form-card" spacing="20">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <FontAwesomeIconView glyphName="EDIT" size="24" fill="#ffffff"/>
                                <Label text="Notas" styleClass="page-title" style="-fx-font-size: 22px;"/>
                            </HBox>

                            <Separator styleClass="separator"/>

                            <!-- NOTAS -->
                            <GridPane hgap="15" vgap="15" alignment="CENTER">
                                <Button text="Cadastrar Notas" 
                                        onAction="#onCadastrarNotas"
                                        styleClass="button-primary"
                                        prefWidth="200" prefHeight="50"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="BOOK" size="16"/>
                                    </graphic>
                                </Button>
                            </GridPane>
                        </VBox>

                        <!-- Atividades Recentes -->
                        <VBox styleClass="form-card" spacing="20">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <FontAwesomeIconView glyphName="HISTORY" size="24" fill="#ffffff"/>
                                <Label text="Atividades Recentes" styleClass="page-title" style="-fx-font-size: 22px;"/>
                            </HBox>

                            <Separator styleClass="separator"/>

                            <!-- Container para atividades -->
                            <VBox fx:id="vboxAtividades" spacing="15">
                                <Label text="Carregando atividades..." style="-fx-text-fill: #737373; -fx-font-size: 14px;"/>
                            </VBox>
                        </VBox>
                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>